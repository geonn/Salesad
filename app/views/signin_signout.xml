<Alloy>
	<Window title="Sign Up" class="container" backButtonTitle="" id="signin_out" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View left="0">
	         	<Button left='0' id="btnBack" width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View class="wfill hfill" top="10">
			<View class="vert wfill hsize" top="0">
				<View class="wfill hsize" top="10" bottom="15" >
					<ImageView class="wfill" width='230' image="/SalesAd_Logo_v2_RoundCornerswShadow.png" id="loginLogo" />
				</View>
				<View class="vert wfill hsize padding" top="0">
					<Label class="wsize hsize bold" bottom="20" color="#fff" textAlign="center" text="Sign up now for more great features!"></Label>
					<Label class="wsize hsize" bottom="5" color="#fff" textAlign="center" text="Save vouchers, earn reward points and much more!"></Label>
				</View>
					<Button width="90%" onClick="register" top="5" bottom="5" height="40" borderRadius="3" backgroundColor="#fff" color="#807C7C" title="Sign Up"></Button>
				<View class="vert wfill hsize padding">
					<Label class="wsize hsize" top="5" bottom="5" color="#fff" text="Already have an account?"></Label>	
					<View class="wsize hsize" top="0" backgroundColor="#fff">
						<Button class="wsize hsize" bottom="1" onClick="login" backgroundColor="#CC2228" color="#fff" title="Sign in here"></Button>
					</View>
				</View>
			</View>
			<View id="footer" class="hsize">
				<View class="wsize hsize horz" left="5">
					<Label class="ftText wsize" id="tou">Terms of Use</Label>
					<Label class="ftText wsize" left="10" right="10">|</Label>
					<Label class="ftText wsize" id="policy">Privacy Policy</Label>
				</View>
				<Label class="ftText" right="5" textAlign="right" >&#169; SalesAd 2017</Label>
			</View>
		</View>
	</Window>
</Alloy>