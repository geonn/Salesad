<Alloy>
	<Window title="My Profile" backButtonTitle="" id="win" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="30" height="45">
	         	<ImageView left='0' width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <RightNavButton>
	        <View id="button" left="0" class="wsize" onClick="doLogout" height="45">
	         	<Label color="#ED1C24" right="0" class="wsize">Logout</Label>
	        </View>
        </RightNavButton>
        <View class="wfill hfill vert">
	        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFF">
				<View left="0" width="15%">
		         	<ImageView left='10' id="btnBack" width="30" height="30" height="30" image="/images/btn-back.png" />
			    </View>
		     	<View id="pageTitle" width="65%">
		     		<Label color="#ED1C24" id="title">My Profile</Label>
		     	</View>
		     	
		     	<View right="0" width="20%" height="45" onClick="doLogout">
		         	<Label class="wsize hsize" color="#ED1C24" right="10" touchEnabled="false">Logout</Label>
		        </View>
		 	</View>
		 	<View bottom='0' class="hr"></View>
			<ScrollView id="main" class="vert hfill wfill">
				<View backgroundColor="#fcfbfb" height="40">
			        <Label class="label">Account Info</Label>
			        <View class="line"></View>
			    </View>
				<View top="10" bottom="10" width="160" height="160" borderRadius="80">
					<ImageView id="photoLoad" image="/images/SalesAd_Profile Pic.png" onClick="popCamera" form_type="image" width="170" height="170" value="0"></ImageView>
				</View>
				
				<View id="table1Container" height="150"></View>
				
		      	<View backgroundColor="#fcfbfb" height="40">
			        <Label class="label">Password</Label>
			        <View class="line"></View>
			    </View>
				<View id="table2Container" height="50"></View>
			</ScrollView>
		</View>
	</Window>
</Alloy>