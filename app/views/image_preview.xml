<Alloy>
	<Window title="Preview" backButtonTitle="" id="win" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="30" onClick="closeWindow">
	         	<Button left='0' width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <RightNavButton>
	        <View id="btnBack" right="0" class="wsize hsize" onClick="doSave">
	         	<Label class='wsize hsize red'>Save</Label>
	        </View>
        </RightNavButton>
        <View class="wfill hfill vert">
	        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFF">
				<View left="0" width="15%">
			         	<ImageView left='10' id="btnBack" width="30" height="30" image="/images/btn-back.png" onClick="closeWindow" />
			    </View>
		     	<View id="pageTitle" width="70%">
		     		<Label color="#ED1C24" id="title">Preview</Label>
		     	</View>
		     	<View width="15%" onClick="doSave">
		     		<Label class='wsize hsize red'>Save</Label>
		     	</View>
		 	</View>
		 	<View bottom='0' class="hr"></View>
		 	<View class="wfill" id="cropped" top="30" borderColor="black" borderWidth="2">
		 		<WebView class="wfill hfill"  id="html" url="/html/preview.html"></WebView>
		 	</View>
		 	<Label class="wsize hsize h6">Drag to reposition</Label>
	 	</View>
	</Window>
</Alloy>