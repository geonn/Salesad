<Alloy>
	<Window class="container" id="forgotPassword" fullscreen="true" navBarHidden="true">
		<View layout="vertical" class="popupView">
			<View layout="horizontal" height="40" width="15%" right="0">
		 		<Button id="button" class="closeBtn" onClick="closeWindow" />
			</View>
			<View height="85%">
			 	<View id="main" layout="vertical" height="85%">
					<ScrollView layout="vertical" showVerticalScrollIndicator="true" id="registerScrollView" scrollType="vertical" showHorizontalScrollIndicator="true" height="200" width="100%">
						<ImageView   image="/SalesAd_Logo_v2_RoundCornerswShadow.png" id="loginLogo" width="90" />
						<Label class="description" left="15">Enter your email address to reset your password.</Label>
						
						<TextField top="5" class="textfield" id="email" hintText="Enter Email" />
						
					</ScrollView>
					<Button id="forgotPasswordButton" onTouchend="sendForgotPassword" borderRadius="3" backgroundColor="#ffffff" title="Send"  width="90%"  height="40" color="#807C7C" />
		            
					</View>
					<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" top="0" opacity="0" backgroundColor="#2E2E2E" >
				        <ActivityIndicator  id="activityIndicator" />
				    	<Label top="5" text="Submitting" color="#ffffff" />
				    </View>
				</View>
			
		</View>
			
	</Window>
	
</Alloy>