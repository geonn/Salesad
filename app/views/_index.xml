<Alloy>
	<Window id="win" title="" navBarHidden="true" fullscreen="true">
		<View class='wfill hsize' top="0" zIndex="10" backgroundColor="#000000">
			<TextField height="40" class="wfill" top="5" bottom="5" left="5" right="130" id="keyword" backgroundColor="#ffffff" color="#000000" hintText="Search SalesAd" onReturn="filterByKeyword">Search SalesAd</TextField>
			<ImageView width="30" class="hsize" right="90" top="10" onClick="filterByKeyword" image="/images/icons/SalesAd_All Icon_5-45.png"></ImageView>
			<ImageView width="30" class="hsize" right="50" top="10"  image="/images/icons/SalesAd_All Icon_5-46.png"></ImageView>
			<ImageView width="30" class="hsize" right="10" top="10" onClick="navTo" target="more" image="/images/icons/SalesAd_All Icon_5-60.png"></ImageView>
		</View>
		<View class="wfill hsize" backgroundColor="#000000" id="menu" top="0" zIndex="10">
			<View class='wsize hsize horz' top="10" bottom="10">
				<ImageView width="40" right="20" onClick="popCategory" height="auto" image="/images/icons/Icon_Menu_Categories.png"></ImageView>
				<ImageView width="40" right="20" height="auto" onClick="filterByFavorite" image="/images/icons/Icon_Menu_Favorites.png"></ImageView>
				<ImageView width="40" right="20" onClick="QrScan" height="auto" image="/images/icons/Icon_Menu_ScanQr.png"></ImageView>
				<ImageView width="40" right="20" onClick="nearMe" height="auto" image="/images/icons/Icon_Menu_NearMe.png"></ImageView>
				<ImageView width="40" height="auto" onClick="navTo" target="reward" image="/images/icons/Icon_Menu_Rewards.png"></ImageView>
			</View>
		</View>
		<ScrollView class="wfill hfill contwfill conthsize vert" scrollType="vertical" top="50" backgroundColor="#000000" id="container">
			<ScrollView class="contwsize conthsize wfill horz" disableBounce="true" height="240" scrollType="horizontal" backgroundColor="#000000" id="feature_banner">
			</ScrollView>
			<View class="wfill hsize vert" backgroundColor="#f6f6f6">
				<View class="wfill hsize" id="title">
					<Label class="wsize hsize h5 bold" right="10" left="14" top="55" id="main_title">New Sales</Label>
					<Label class="wsize hsize h5 bold" id="manage_btn" onClick="navTo" target="favourite" top="45" right="10">Manage</Label>
				</View>
				<View class="horz wfill hsize" left="14" id="ad_list"></View>
			</View>
		</ScrollView>
	</Window>
</Alloy>