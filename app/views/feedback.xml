<Alloy>
	<Window id="win" title="Feedback & Support" navTintColor="#ED1C24" backgroundColor="#fff" class="container" >
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="45">
	         	<Button left='0'  width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFF">
			<View left="0" width="15%">
		         	<ImageView left='10' id="btnBack" width="30" height="30" image="/images/btn-back.png" />
		    </View>
	     	<View id="pageTitle" width="70%">
	     		<Label color="#ED1C24">Feedback & Support</Label>
	     	</View>
	 	</View>
	 	<View bottom='0' class="hr"></View>
	 	<Label class="wfill hsize padding" textAlign="center">
	 		Do you have any questions or comments about our app? Let us know below!
	 	</Label>
	 	<View class="wfill hfill vert" id="inner_box" top=10>
	 		<TextField backgroundColor="white" required="true" class="textfield" id="name" hintText="Name" />
	    	<TextField backgroundColor="white" required="true" class="textfield" id="email" hintText="Email Address" />
	    	<TextField backgroundColor="white" class="textfield" id="mobile" hintText="Mobile No." />
	    	<TextField backgroundColor="white" required="true" class="textfield" id="subject" hintText="Subject" />	
	    	<TextArea backgroundColor="white" id="comment" onFocus="clearHintText" onBlur="setHintText" required="true" _hintText="Feedback" height="60" value="Feedback"></TextArea>
	    	<Button class="button" onClick="submit" left="10" right="10" title="Send"></Button>
	 	</View>
	</Window>
</Alloy>