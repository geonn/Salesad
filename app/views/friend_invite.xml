<Alloy>
	<Window class="container" id="win" backButtonTitle="" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View left="0">
	         	<Button left='0' onClick="closeWindow" width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
		<View layout="horizontal" height="50" width="100%" platform="android">
			<View left="0" width="15%">
		         	<ImageView left='10' onClick="closeWindow" width="30" height="30" image="/images/btn-back.png" />
			</View>       
	     	<View id="pageTitle" width="70%"></View>
	 	</View>
        <View bottom='0' class="hr"></View>
		<View class="wfill hfill" top="0" backgroundColor="#fff">
			<View class="wfill hsize vert">
				<ImageView width="80%" image="/images/SalesAd_HighfiveGirls.png"></ImageView>
				<View class="wfill hsize" top="20">
					<Label class="bold" text="Invite friends to get FREE vouchers!"></Label>
				</View>
				<View class="wfill hsize" top="10" left="15" right="15">
					<Label text="Once your friend signs up to SalesAd by your referral link, you will get 30 CP points. Collect more points to redeem more CP vouchers for FREE!"></Label>
				</View>
				<Button class="wfill h4 save_button" height="40" onClick="sendInvite" title="Send Invitation"></Button>
			</View>
		</View>
	</Window>	
</Alloy>