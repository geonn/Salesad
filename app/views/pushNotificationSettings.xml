<Alloy>
	<Window  backButtonTitle="" class="container" id="notification"  navTintColor="#ED1C24">
		<View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#fff">
			<View left="0" width="15%">
		         	<ImageView left='10' onClick="closeWindow" width="30" height="30" image="/images/btn-back.png" />
		    </View>
	     	<View id="pageTitle" width="70%"></View>
		    
	 	</View>
		 <LeftNavButton>
	        <View left="0">
	         	<Button left='0' onClick="closeWindow" width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>

        <View bottom='0' class="hr"></View>
		<View id="main" layout="vertical" height="95%">
			<View class="line" top="50"></View>
			<View id="notificationSlider" height="40" backgroundColor="#ffffff">
				<Label text="Favorite Store" textAlign="left" left="10" />
				<Switch id="notiSwitch" notification_title="notification" right="5" value="true"  />
			</View>
			<View id="notificationSlider" height="40" backgroundColor="#ffffff">
				<Label text="Featured Ad" textAlign="left" left="10" />
				<Switch id="notiSwitch_featured" notification_title="notification_featured" right="5" value="true"  />
			</View>
			<View class="line"></View>
	       <!-- <Label class="contentInfo padding">Switch off push notification will miss the notification/alert of great deal like Mega Sales and Limited time Sales!</Label> -->
	       <Label class="label" top="5">Recommendation : ON</Label>
	    	
		</View>
	</Window>
</Alloy>